{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "include": [
      "src/**",
      "tests/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 4
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "tests/**"
    ],
    "rules": {
      "all": true,
      "suspicious": {
        "noReactSpecificProps": "off"
      },
      "style": {
        "useNamingConvention": "off",
        "noDefaultExport": "off"
      }
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "enabled": true,
      "indentWidth": 2,
      "indentStyle": "space"
    }
  }
}